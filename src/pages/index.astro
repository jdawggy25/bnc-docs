---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import DocCard from '../components/DocCard.astro';
import Charts from '../components/Charts.astro';
import metricsData from '../data/seo-metrics.json';

const docs = await getCollection('docs');
const { client, keywords, traffic, backlinks, issues, overview } = metricsData;

// Sort docs alphabetically by slug
const sortedDocs = docs.sort((a, b) => a.slug.localeCompare(b.slug));

// Helper to extract title from slug
function formatTitle(slug: string): string {
  return slug
    .replace(/_/g, ' ')
    .replace(/-/g, ' ')
    .replace(/\b\w/g, c => c.toUpperCase());
}
---

<BaseLayout title="BNC Builders Inc. - Marketing Proposal | Comcreate">
  <main class="main">
    <div class="container">
      <header class="hero">
        <div class="hero-content">
          <div class="brand-badge">
            <img src="/comcreate-logo.png" alt="Comcreate" class="badge-logo" />
            <span class="badge-divider">|</span>
            <span>Digital Marketing Proposal</span>
          </div>
          <div class="hero-divider"></div>
          <h1 class="page-title">BNC Builders Inc.</h1>
          <p class="page-tagline">
            Complete Digital Marketing Takeover
          </p>
          <p class="page-description">
            Website migration, enterprise tracking, paid advertising, SEO strategy, and custom CRM build â€” everything you need to take control of your marketing.
          </p>
          <div class="hero-meta">
            <span class="meta-item">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
              December 2025
            </span>
            <span class="meta-item">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
              San Diego, CA
            </span>
            <span class="meta-item">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
              (619) 955-0105
            </span>
          </div>
        </div>
      </header>

      <!-- Charts Section -->
      <Charts />

      <!-- Reports Section -->
      <div class="section-header">
        <span class="label-mono-accent">Available Reports</span>
      </div>
      <div class="doc-grid">
        {sortedDocs.map((doc) => (
          <DocCard
            title={doc.data.title || formatTitle(doc.slug)}
            slug={doc.slug}
            description={doc.data.description}
          />
        ))}
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .main {
    flex: 1;
  }

  .hero {
    margin-bottom: var(--space-12);
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes expandWidth {
    from {
      width: 0;
    }
    to {
      width: 60px;
    }
  }

  .hero-content {
    max-width: 720px;
  }

  .brand-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-6);
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 0ms;
  }

  .brand-badge .badge-logo {
    height: 20px;
    width: auto;
  }

  .brand-badge .badge-divider {
    color: var(--color-border-hover);
    margin: 0 var(--space-1);
  }

  .hero-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    margin-top: var(--space-6);
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 500ms;
  }

  .meta-item {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .meta-item svg {
    color: var(--color-primary);
  }

  .page-title {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: var(--space-4);
    color: var(--color-text);
    line-height: 1.1;
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 100ms;
  }

  .hero-divider {
    width: 60px;
    height: 4px;
    background: var(--color-primary);
    margin-bottom: var(--space-6);
    animation: expandWidth 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 100ms;
    width: 0;
    box-shadow: 0 0 15px rgba(59, 130, 246, 0.4);
  }

  .page-tagline {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-4);
    line-height: 1.4;
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 300ms;
  }

  .page-description {
    color: var(--color-text-secondary);
    font-size: 1.125rem;
    line-height: 1.6;
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 400ms;
  }

  @media (max-width: 640px) {
    .page-title {
      font-size: 1.75rem;
    }

    .page-tagline {
      font-size: 1.125rem;
    }

    .page-description {
      font-size: 1rem;
    }

    .brand-badge {
      font-size: 0.75rem;
    }

    .hero-divider {
      width: 48px;
      height: 3px;
    }
  }

  .section-header {
    margin-bottom: var(--space-4);
    padding-bottom: var(--space-2);
    border-bottom: 1px solid var(--color-border);
    opacity: 0;
    animation: slideUp 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 800ms;
  }
</style>
