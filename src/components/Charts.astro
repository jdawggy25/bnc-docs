---
import metricsData from '../data/seo-metrics.json';

const { traffic, keywords, coreWebVitals, overview } = metricsData;
---

<div class="charts-section">
  <!-- Performance Overview -->
  <div class="chart-grid">
    <div class="chart-card">
      <div class="chart-header">
        <span class="label-mono">Performance Score</span>
      </div>
      <div id="performance-gauge" class="chart-container" data-value={overview.performanceScore}></div>
    </div>

    <div class="chart-card">
      <div class="chart-header">
        <span class="label-mono">SEO Score</span>
      </div>
      <div id="seo-gauge" class="chart-container" data-value={overview.seoScore}></div>
    </div>

    <div class="chart-card span-2">
      <div class="chart-header">
        <span class="label-mono">Traffic Trend</span>
        <span class="chart-value">{traffic.monthly.toLocaleString()}<span class="chart-unit"> visits/mo</span></span>
      </div>
      <div id="traffic-chart" class="chart-container chart-tall" data-trend={JSON.stringify(traffic.trend)}></div>
    </div>
  </div>

  <!-- Core Web Vitals -->
  <div class="vitals-section">
    <div class="section-header">
      <span class="label-mono-accent">Core Web Vitals</span>
    </div>
    <div class="vitals-grid">
      {Object.entries(coreWebVitals).map(([key, vital]) => (
        <div class="vital-card" data-status={vital.status}>
          <div class="vital-header">
            <span class="vital-name">{key.toUpperCase()}</span>
            <span class={`vital-status ${vital.status}`}>{vital.status}</span>
          </div>
          <div class="vital-value">
            {vital.value}<span class="vital-unit">{vital.unit}</span>
          </div>
          <div class="vital-bar">
            <div
              class="vital-progress"
              style={`width: ${Math.min((vital.value / vital.threshold) * 100, 100)}%`}
              data-status={vital.status}
            ></div>
          </div>
          <div class="vital-threshold">
            Threshold: {vital.threshold}{vital.unit}
          </div>
        </div>
      ))}
    </div>
  </div>
</div>

<script>
  import ApexCharts from 'apexcharts';

  const chartColors = {
    primary: '#3b82f6',
    primaryLight: '#60a5fa',
    bgElevated: '#12151e',
  };

  // Performance Gauge
  const perfEl = document.querySelector('#performance-gauge');
  if (perfEl) {
    const perfValue = parseInt(perfEl.getAttribute('data-value') || '0');
    new ApexCharts(perfEl, {
      series: [perfValue],
      chart: {
        type: 'radialBar',
        height: 200,
        sparkline: { enabled: true },
        background: 'transparent'
      },
      plotOptions: {
        radialBar: {
          startAngle: -135,
          endAngle: 135,
          hollow: { size: '65%', background: 'transparent' },
          track: { background: chartColors.bgElevated, strokeWidth: '100%' },
          dataLabels: {
            name: { show: false },
            value: {
              fontSize: '2rem',
              fontFamily: 'JetBrains Mono, monospace',
              fontWeight: 600,
              color: chartColors.primary,
              offsetY: 10,
              formatter: (val: number) => String(val)
            }
          }
        }
      },
      fill: {
        type: 'gradient',
        gradient: {
          shade: 'dark',
          type: 'horizontal',
          gradientToColors: [chartColors.primaryLight],
          stops: [0, 100]
        }
      },
      stroke: { lineCap: 'round' },
      colors: [chartColors.primary]
    }).render();
  }

  // SEO Gauge
  const seoEl = document.querySelector('#seo-gauge');
  if (seoEl) {
    const seoValue = parseInt(seoEl.getAttribute('data-value') || '0');
    new ApexCharts(seoEl, {
      series: [seoValue],
      chart: {
        type: 'radialBar',
        height: 200,
        sparkline: { enabled: true },
        background: 'transparent'
      },
      plotOptions: {
        radialBar: {
          startAngle: -135,
          endAngle: 135,
          hollow: { size: '65%', background: 'transparent' },
          track: { background: chartColors.bgElevated, strokeWidth: '100%' },
          dataLabels: {
            name: { show: false },
            value: {
              fontSize: '2rem',
              fontFamily: 'JetBrains Mono, monospace',
              fontWeight: 600,
              color: chartColors.primary,
              offsetY: 10,
              formatter: (val: number) => String(val)
            }
          }
        }
      },
      fill: {
        type: 'gradient',
        gradient: {
          shade: 'dark',
          type: 'horizontal',
          gradientToColors: [chartColors.primaryLight],
          stops: [0, 100]
        }
      },
      stroke: { lineCap: 'round' },
      colors: [chartColors.primary]
    }).render();
  }

  // Traffic Trend
  const trafficEl = document.querySelector('#traffic-chart');
  if (trafficEl) {
    const trendData = JSON.parse(trafficEl.getAttribute('data-trend') || '[]');
    new ApexCharts(trafficEl, {
      series: [{ name: 'Monthly Traffic', data: trendData }],
      chart: {
        type: 'area',
        height: 160,
        sparkline: { enabled: true },
        background: 'transparent',
        animations: { enabled: true, easing: 'easeinout', speed: 800 }
      },
      stroke: { curve: 'smooth', width: 2, colors: [chartColors.primary] },
      fill: {
        type: 'gradient',
        gradient: {
          shadeIntensity: 1,
          opacityFrom: 0.4,
          opacityTo: 0.05,
          stops: [0, 100]
        }
      },
      tooltip: {
        enabled: true,
        theme: 'dark',
        style: { fontFamily: 'Inter, sans-serif' },
        y: { formatter: (val: number) => val.toLocaleString() + ' visits' }
      },
      colors: [chartColors.primary]
    }).render();
  }
</script>

<style>
  .charts-section {
    margin-bottom: var(--space-10);
  }

  .chart-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1px;
    background: var(--color-border);
    border: 1px solid var(--color-border);
    margin-bottom: var(--space-8);
  }

  @media (min-width: 768px) {
    .chart-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .chart-card {
    background: var(--color-bg-deep);
    padding: var(--space-5);
    transition: all var(--transition-base);
    opacity: 0;
    animation: slideUp 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  .chart-card:nth-child(1) { animation-delay: 100ms; }
  .chart-card:nth-child(2) { animation-delay: 180ms; }
  .chart-card:nth-child(3) { animation-delay: 260ms; }

  .chart-card:hover {
    background: var(--color-bg);
    transform: translateY(-2px);
  }

  .chart-card.span-2 {
    grid-column: span 2;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .chart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-3);
  }

  .chart-value {
    font-family: var(--font-mono);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-primary);
  }

  .chart-unit {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    font-weight: 400;
  }

  .chart-container {
    min-height: 180px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .chart-tall {
    min-height: 140px;
  }

  /* Vitals Section */
  .vitals-section {
    margin-top: var(--space-8);
  }

  .section-header {
    margin-bottom: var(--space-4);
    padding-bottom: var(--space-2);
    border-bottom: 1px solid var(--color-border);
  }

  .vitals-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1px;
    background: var(--color-border);
    border: 1px solid var(--color-border);
  }

  .vital-card {
    background: var(--color-bg-deep);
    padding: var(--space-4);
    transition: all var(--transition-base);
    opacity: 0;
    animation: slideUp 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  .vital-card:nth-child(1) { animation-delay: 400ms; }
  .vital-card:nth-child(2) { animation-delay: 480ms; }
  .vital-card:nth-child(3) { animation-delay: 560ms; }
  .vital-card:nth-child(4) { animation-delay: 640ms; }
  .vital-card:nth-child(5) { animation-delay: 720ms; }

  .vital-card:hover {
    background: var(--color-bg);
    transform: translateY(-2px);
  }

  .vital-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-2);
  }

  .vital-name {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text);
    letter-spacing: 0.05em;
  }

  .vital-status {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    font-weight: 500;
    text-transform: uppercase;
    padding: 0.125rem 0.375rem;
    border-radius: var(--radius-sm);
  }

  .vital-status.pass {
    color: var(--color-primary);
    background: rgba(59, 130, 246, 0.1);
  }

  .vital-status.fail {
    color: var(--color-error);
    background: rgba(248, 113, 113, 0.1);
  }

  .vital-value {
    font-family: var(--font-mono);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text);
    line-height: 1;
    margin-bottom: var(--space-3);
    transition: all var(--transition-base);
  }

  .vital-card:hover .vital-value {
    color: var(--color-primary);
    text-shadow: 0 0 15px rgba(59, 130, 246, 0.3);
  }

  .vital-unit {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    font-weight: 400;
  }

  .vital-bar {
    height: 4px;
    background: var(--color-bg-elevated);
    border-radius: 2px;
    overflow: hidden;
    margin-bottom: var(--space-2);
  }

  .vital-progress {
    height: 100%;
    border-radius: 2px;
    animation: progressFill 1s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 0.8s;
  }

  @keyframes progressFill {
    from {
      width: 0 !important;
    }
  }

  .vital-progress[data-status="pass"] {
    background: linear-gradient(90deg, var(--color-primary-dark), var(--color-primary));
    box-shadow: 0 0 8px rgba(59, 130, 246, 0.3);
  }

  .vital-progress[data-status="fail"] {
    background: linear-gradient(90deg, #dc2626, var(--color-error));
    box-shadow: 0 0 8px rgba(248, 113, 113, 0.3);
  }

  .vital-threshold {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    color: var(--color-text-muted);
  }

  @media (max-width: 640px) {
    .chart-grid {
      grid-template-columns: 1fr;
    }

    .chart-card.span-2 {
      grid-column: span 1;
    }

    .vitals-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
