---
const year = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-grid">
      <div class="footer-brand">
        <a href="https://comcreate.org" target="_blank" rel="noopener" class="footer-logo-link">
          <img src="/wide-logo.png" alt="Comcreate" class="footer-logo" />
        </a>
        <p class="footer-tagline">
          Igniting brands with next-gen digital power
        </p>
      </div>

      <div class="footer-section">
        <h3 class="footer-heading">Contact</h3>
        <ul class="footer-links">
          <li><a href="tel:+16199550105">(619) 955-0105</a></li>
          <li><a href="mailto:sales@comcreate.org">sales@comcreate.org</a></li>
          <li><span class="footer-location">San Diego, CA</span></li>
        </ul>
      </div>

      <div class="footer-section">
        <h3 class="footer-heading">Services</h3>
        <ul class="footer-links">
          <li><a href="https://comcreate.org" target="_blank" rel="noopener">Web Design</a></li>
          <li><a href="https://comcreate.org" target="_blank" rel="noopener">SEO Strategy</a></li>
          <li><a href="https://comcreate.org" target="_blank" rel="noopener">Digital Advertising</a></li>
          <li><a href="https://comcreate.org" target="_blank" rel="noopener">Branding</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h3 class="footer-heading">Get Started</h3>
        <p class="footer-cta-text">Ready to ignite your digital growth?</p>
        <a href="https://comcreate.org" target="_blank" rel="noopener" class="footer-cta-button">
          Free Consultation
        </a>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="footer-copyright">
        &copy; {year} Comcreate. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid var(--color-border);
    padding: var(--space-12) var(--space-4) var(--space-8);
    margin-top: auto;
  }

  @media (min-width: 768px) {
    .footer {
      padding: var(--space-16) var(--space-8) var(--space-10);
    }
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-10);
    margin-bottom: var(--space-10);
    padding-bottom: var(--space-10);
    border-bottom: 1px solid var(--color-border);
  }

  @media (min-width: 640px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-12);
    }
  }

  @media (min-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1.5fr 1fr 1fr 1.2fr;
      gap: var(--space-12);
    }
  }

  .footer-brand {
    max-width: 280px;
  }

  .footer-logo-link {
    display: inline-block;
    transition: opacity var(--transition-fast);
    margin-bottom: var(--space-3);
  }

  .footer-logo-link:hover {
    opacity: 0.8;
  }

  .footer-logo {
    height: 32px;
    width: auto;
  }

  .footer-tagline {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .footer-heading {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    font-weight: 500;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-4);
  }

  .footer-location {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: var(--space-2);
  }

  .footer-links a,
  .footer-links span {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    transition: color var(--transition-fast);
  }

  .footer-links a:hover {
    color: var(--color-primary);
  }

  .footer-cta-text {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-4);
    line-height: 1.5;
  }

  .footer-cta-button {
    display: inline-block;
    padding: var(--space-3) var(--space-5);
    background: var(--color-primary);
    color: white;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 1px solid var(--color-primary);
    transition: all var(--transition-base);
  }

  .footer-cta-button:hover {
    background: transparent;
    color: var(--color-primary);
    border-color: var(--color-primary);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-copyright {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }

  @media (max-width: 640px) {
    .footer-logo {
      height: 28px;
    }

    .footer-tagline {
      font-size: 0.875rem;
    }

    .footer-bottom {
      justify-content: center;
    }
  }
</style>
